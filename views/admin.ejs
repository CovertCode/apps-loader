<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen">

    <nav class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            <div class="text-xl font-bold text-gray-800">Admin Panel</div>
            <a href="/dashboard" class="text-indigo-600 hover:text-indigo-800">Back to Dashboard</a>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto py-10 px-4 space-y-8">

        <!-- Settings -->
        <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-lg font-medium mb-4">Settings</h2>
            <form action="/admin/settings" method="POST" class="flex items-center">
                <input id="autoApprove" name="autoApprove" type="checkbox" <%=autoApprove ? 'checked' : '' %> class="h-4
                w-4 text-indigo-600">
                <label for="autoApprove" class="ml-3 text-sm font-medium text-gray-700">Auto-approve new users</label>
                <button type="submit"
                    class="ml-auto bg-gray-800 text-white px-4 py-2 rounded text-sm hover:bg-gray-700">Save</button>
            </form>
        </div>

        <!-- User Management -->
        <div>
            <h2 class="text-lg font-medium mb-4">Users</h2>
            <div class="bg-white shadow overflow-hidden rounded-lg">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Username</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Action</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% users.forEach(u=> { %>
                            <tr>
                                <td class="px-6 py-4 text-sm font-medium text-gray-900">
                                    <%= u.username %>
                                </td>
                                <td class="px-6 py-4">
                                    <% if (u.is_approved) { %> <span
                                            class="text-green-800 bg-green-100 px-2 py-0.5 rounded text-xs">Approved</span>
                                        <% } else { %> <span
                                                class="text-yellow-800 bg-yellow-100 px-2 py-0.5 rounded text-xs">Pending</span>
                                            <% } %>
                                </td>
                                <td class="px-6 py-4 text-right text-sm">
                                    <% if (u.role !=='admin' ) { %>
                                        <form action="/admin/approve" method="POST">
                                            <input type="hidden" name="userId" value="<%= u.id %>">
                                            <button name="action" value="<%= u.is_approved ? 'revoke' : 'approve' %>"
                                                class="<%= u.is_approved ? 'text-red-600' : 'text-indigo-600' %>">
                                                <%= u.is_approved ? 'Revoke' : 'Approve' %>
                                            </button>
                                        </form>
                                        <% } %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- NEW: App Management (Featured) -->
        <div>
            <h2 class="text-lg font-medium mb-4">Apps & Featured Content</h2>
            <div class="bg-white shadow overflow-hidden rounded-lg">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Slug</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Author</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Featured</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">View</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% apps.forEach(app=> { %>
                            <tr>
                                <td class="px-6 py-4 text-sm font-medium text-gray-900">
                                    <%= app.title || '-' %>
                                </td>
                                <td class="px-6 py-4 text-sm font-medium text-gray-900">
                                    <%= app.slug %>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-500">
                                    <%= app.author %>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <form action="/admin/feature" method="POST">
                                        <input type="hidden" name="appId" value="<%= app.id %>">
                                        <label class="inline-flex items-center cursor-pointer">
                                            <input type="checkbox" name="isFeatured" onchange="this.form.submit()"
                                                <%=app.is_featured ? 'checked' : '' %> class="form-checkbox h-5 w-5
                                            text-indigo-600 transition duration-150 ease-in-out">
                                        </label>
                                    </form>
                                </td>
                                <td class="px-6 py-4 text-right text-sm">
                                    <a href="/sites/<%= app.slug %>/" target="_blank"
                                        class="text-blue-600 hover:text-blue-900">Open â†—</a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</body>

</html>